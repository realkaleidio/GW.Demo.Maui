<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="GW.Demo.Maui.Views.Screens.PositionView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:GW.Demo.Maui.ViewModels"
    Loaded="_OnLoaded" Unloaded="_OnUnloaded">
    <ContentView.Resources><vm:PositionViewModel x:Key="VM" /></ContentView.Resources>    
    
    <Grid BackgroundColor="{DynamicResource PrimaryContainer}" Padding="24" RowDefinitions="*,Auto,*">
        <Label Grid.Row="1" Text="Position" FontSize="18" Opacity="0.75" HorizontalOptions="Center" HorizontalTextAlignment="Center" TranslationY="-68"/>
        <Label Grid.Row="1" Text="{Binding CoordinateText, Source={StaticResource VM}}" FontSize="28" FontAttributes="Bold"
               LineBreakMode="WordWrap" MaxLines="2"
               HorizontalOptions="Center" HorizontalTextAlignment="Center" TranslationY="-36"/>
    </Grid>
</ContentView>
